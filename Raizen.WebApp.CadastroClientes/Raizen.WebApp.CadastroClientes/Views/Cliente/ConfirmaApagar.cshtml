@model ClienteModel
@{
    ViewData["Title"] = "Confirmação para Deletar um Cliente";
}

<div class="text-center">

    <h3>Deseja mesmo Deletar as informações do Cliente (@Model.Nome)?</h3>

</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-route-id="@Model.Id" asp-controller="Cliente" asp-action="Apagar">Confirmar exclusão</a>
</div>